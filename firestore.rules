rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isSignedIn() { 
      return request.auth != null; 
    }

    // ========================================
    // RIDES - الرحلات وإعلانات الشركات
    // ========================================
    match /rides/{rideId} {
      // Anyone can read rides
      allow read: if true;
      
      // Signed-in users can create rides
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.createdAt is string;
      
      // Owner can update their ride
      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid;
      
      // Owner can delete their ride
      allow delete: if isSignedIn() 
        && resource.data.userId == request.auth.uid;
    }

    // ========================================
    // LISTINGS (Alternative collection for future use)
    // ========================================
    match /listings/{listingId} {
      allow read: if true;
      
      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid;
      
      allow update: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
      
      allow delete: if isSignedIn() 
        && resource.data.createdBy == request.auth.uid;
    }

    // ========================================
    // USERS - معلومات المستخدمين
    // ========================================
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    // ========================================
    // BOOKINGS - الحجوزات
    // ========================================
    match /bookings/{bookingId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    // ========================================
    // REPORTS - التقارير
    // ========================================
    match /reports/{reportId} {
      allow read: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // ========================================
    // ALERTS - التنبيهات
    // ========================================
    match /alerts/{alertId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // ========================================
    // RATINGS - التقييمات
    // ========================================
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // ========================================
    // APPOINTMENTS - الحجوزات (للمستقبل)
    // ========================================
    match /appointments/{appointmentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    // ========================================
    // REMINDERS - التذكيرات
    // ========================================
    match /reminders/{reminderId} {
      allow read: if isSignedIn();
      allow create, update, delete: if false;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
