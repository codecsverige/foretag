rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ WARNING: INSECURE RULES - OPEN READ/WRITE ACCESS ⚠️
    // These rules allow anyone to read and write all data in Firestore.
    // This is NOT recommended for production use as it exposes your data
    // to unauthorized access, modification, and potential abuse.
    // 
    // USE THESE RULES ONLY FOR:
    // - Development/testing environments
    // - Prototypes and demos
    // - Applications where data security is not a concern
    //
    // For production, implement proper authentication and authorization rules.
    // ⚠️ WARNING: INSECURE RULES - OPEN READ/WRITE ACCESS ⚠️
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
